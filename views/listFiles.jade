doctype html
html(lang="en")
  head
    title upload-files-node (ListFiles)
    meta(charset="utf-8")
    link(href="/libs/bootstrap/css/bootstrap.min.css" rel="stylesheet")
    script(type="text/javascript" src="/libs/jquery/jquery-3.1.0.min.js")
    script(type="text/javascript" src="/libs/bootstrap/js/bootstrap.min.js")
  body
    div(class="container")
      div(class="col-md-12" style="margin-top: 20px;")
        h1(class="text-center") Welcome ListFiles
      div(class="col-md-12")
        div(class="panel panel-default")
          div(class="panel-heading" style="padding-bottom: 30px;")
            div(class="col-md-3 inline-block") #[span(class="glyphicon glyphicon-home" aria-hidden="true" style="color: #767676;")] #[a(href="/" style="color: #767676;") Home]
            div(class="col-md-3 inline-block") #[span(class="glyphicon glyphicon-plus" aria-hidden="true" style="color: #767676;")] #[a(href="/newFile" style="color: #767676;") Upload New File]
            div(class="col-md-3 inline-block")  #[span(class="glyphicon glyphicon-th-list" aria-hidden="true" style="color: #767676;")] #[a(href="/files" style="color: #767676;") List Files]
            div(class="col-md-3 inline-block") GitHub
          div(class="panel-body")
            div(class="col-md-12")
              h1.text-center File List
              table(class="table table-bordered")
                thread
                  tr
                    th ID
                    th FileName
                    th FilePath
                    th Action
                tbody
                  for data in result
                    tr
                      td #{data.id}
                      td #{data.fileName}
                      td #{data.filePath}
                      td
                        a(href="/download/#{data.id}" target="_blank") Download
